<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/symbolsComponentSearchToolbarLayout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginStart="@dimen/xlarge_margin"
    android:layout_marginTop="@dimen/normal_margin"
    android:layout_marginEnd="@dimen/xlarge_margin"
    android:layout_marginBottom="@dimen/normal_margin"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="4dp"
    app:cardElevation="6dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/symbolsComponentSearchToolbarIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="@dimen/xlarge_margin"
            android:padding="@dimen/small_padding"
            app:srcCompat="@drawable/component_ic_search"
            app:tint="@color/textColorSecondary" />

        <TextView
            android:id="@+id/symbolsComponentSearchToolbarLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/normal_margin"
            android:text="Search" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
